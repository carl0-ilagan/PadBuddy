rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'ricepaddy.contact@gmail.com';
    }
    
    // Users collection - users can read/write their own document, admins can read all
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      // Allow users to create and update their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if isAdmin();
      
      // Subcollection: Fields under users
      match /fields/{fieldId} {
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow write: if request.auth != null && request.auth.uid == userId;
        
        // Subcollection: Paddies under fields
        match /paddies/{paddyId} {
          allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
          allow write: if request.auth != null && request.auth.uid == userId;
          
          // Subcollection: Logs under paddies
          match /logs/{logId} {
            allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
            allow write: if request.auth != null && request.auth.uid == userId;
          }
        }
        
        // Subcollection: Tasks under fields
        match /tasks/{taskId} {
          allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
          allow write: if request.auth != null && request.auth.uid == userId;
        }
      }
      
      // Subcollection: Notifications under users
      match /notifications/{notificationId} {
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Subcollection: FCM Tokens under users (for push notifications)
      match /fcmTokens/{tokenId} {
        allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Rice Varieties collection - admins can write, everyone can read
    match /riceVarieties/{varietyId} {
      allow read: if request.auth != null;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Top-level Fields collection - users can read/write their own fields, admins can read all
    match /fields/{fieldId} {
      allow read: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid || isAdmin());
      allow write: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }
    
    // Devices collection - users can read/write devices, admins have full access
    match /devices/{deviceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if isAdmin();
    }

    // Fallback device-centric logs written by Cloud Function when no paddy binding exists
    // Read-only for authenticated users; no direct client writes
    match /deviceLogs/{deviceId} {
      allow read: if request.auth != null;
      allow write: if false;
      match /readings/{logId} {
        allow read: if request.auth != null;
        allow write: if false;
      }
    }
    
    // Top-level Notifications collection - users can read their own, admins can read all
    match /notifications/{notificationId} {
      allow read: if request.auth != null && 
        (resource == null || resource.data.userId == request.auth.uid || isAdmin());
      allow write: if request.auth != null;
    }
    
    // Activities collection - read-only for authenticated users
    match /activities/{activityId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Settings collection - read for all authenticated users, write for admins only
    match /settings/{settingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}